<body>
    <div class="container">
        <h1>Big HoG</h1>

        <div class="controls">
            <label class="file-input-wrapper">
                üìÅ Choose an Image File
                <input type="file" id="imageInput" accept="image/*">
            </label>

            <select id="methodSelect">
                <option value="IMAGE">üîç Edge Detection</option>
                <option value="HISTOGRAM">üìä Histogram Analysis</option>
                <option value="NORMALIZATION">‚öñÔ∏è Normalization</option>
            </select>
        </div>

        <div class="image-container">
            <div class="image-section">
                <h3>üì∏ Original Image</h3>
                <img id="originalImage" style="display: none;" alt="Original image">
                <div id="originalPlaceholder" class="placeholder">
                    Upload an image to get started
                </div>
                <div id="originalStats" class="stats-container" style="display: none;"></div>
            </div>

            <div class="image-section">
                <h3 id="processedTitle">üîß Processed Image: Edge Detection</h3>
                <canvas id="processedCanvas" style="display: none;"></canvas>
                <div id="processedPlaceholder" class="placeholder">
                    Processed image will appear here
                </div>
                <div id="histogramContainer" class="histogram-container" style="display: none;">
                    <h4>üìä Color Histogram</h4>
                    <canvas id="histogramCanvas"></canvas>
                </div>
                <div id="processedStats" class="stats-container" style="display: none;"></div>
            </div>
        </div>

        <div id="loading" class="loading" style="display: none;">Processing image</div>
        <div id="error" class="error" style="display: none;"></div>
    </div>

    <script>
        class ImageProcessor {
            constructor() {
                this.setupEventListeners();
                this.currentImage = null;
            }

            setupEventListeners() {
                const imageInput = document.getElementById('imageInput');
                const methodSelect = document.getElementById('methodSelect');

                imageInput.addEventListener('change', (e) => this.handleImageUpload(e));
                methodSelect.addEventListener('change', () => this.processImage());
            }

            handleImageUpload(event) {
                const file = event.target.files[0];
                if (!file) return;

                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = new Image();
                    img.onload = () => {
                        this.currentImage = img;
                        this.displayOriginalImage(img);
                        this.processImage();
                    };
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }

            displayOriginalImage(img) {
                const originalImg = document.getElementById('originalImage');
                const placeholder = document.getElementById('originalPlaceholder');
                const statsContainer = document.getElementById('originalStats');

                originalImg.src = img.src;
                originalImg.style.display = 'block';
                placeholder.style.display = 'none';

                // Show image stats
                this.displayImageStats(img, statsContainer);
                statsContainer.style.display = 'grid';
            }

            displayImageStats(img, container) {
                container.innerHTML = `
                    <div class="stat-item">
                        <div class="stat-label">Width</div>
                        <div class="stat-value">${img.width}px</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Height</div>
                        <div class="stat-value">${img.height}px</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Total Pixels</div>
                        <div class="stat-value">${(img.width * img.height).toLocaleString()}</div>
                    </div>
                `;
            }

            async processImage() {
                if (!this.currentImage) return;

                const method = document.getElementById('methodSelect').value;
                const loading = document.getElementById('loading');
                const error = document.getElementById('error');

                loading.style.display = 'block';
                error.style.display = 'none';

                try {
                    let processedResult;

                    switch(method) {
                        case 'IMAGE':
                            processedResult = await this.processImageMethod();
                            break;
                        case 'HISTOGRAM':
                            processedResult = await this.createHistogram();
                            break;
                        case 'NORMALIZATION':
                            processedResult = await this.normalizeImage();
                            break;
                        default:
                            processedResult = this.currentImage;
                    }

                    this.displayProcessedImage(processedResult, method);

                } catch(err) {
                    error.textContent = `Error processing image: ${err.message}`;
                    error.style.display = 'block';
                } finally {
                    loading.style.display = 'none';
                }
            }

            async processImageMethod() {
                return new Promise((resolve) => {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');

                    canvas.width = this.currentImage.width;
                    canvas.height = this.currentImage.height;

                    ctx.drawImage(this.currentImage, 0, 0);
                    const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const data = imageData.data;

                    const processed = new Uint8ClampedArray(data.length);
                    const width = canvas.width;
                    const height = canvas.height;

                    for (let y = 1; y < height - 1; y++) {
                        for (let x = 1; x < width - 1; x++) {
                            const idx = (y * width + x) * 4;

                            // Get surrounding pixels for edge detection
                            const neighbors = [];
                            for (let dy = -1; dy <= 1; dy++) {
                                for (let dx = -1; dx <= 1; dx++) {
                                    const nIdx = ((y + dy) * width + (x + dx)) * 4;
                                    neighbors.push((data[nIdx] + data[nIdx + 1] + data[nIdx + 2]) / 3);
                                }
                            }

                            // Sobel X and Y
                            const gx = (-1 * neighbors[0] + 1 * neighbors[2] +
                                       -2 * neighbors[3] + 2 * neighbors[5] +
                                       -1 * neighbors[6] + 1 * neighbors[8]);

                            const gy = (-1 * neighbors[0] + -2 * neighbors[1] + -1 * neighbors[2] +
                                        1 * neighbors[6] + 2 * neighbors[7] + 1 * neighbors[8]);

                            const magnitude = Math.sqrt(gx * gx + gy * gy);

                            processed[idx] = magnitude;
                            processed[idx + 1] = magnitude;
                            processed[idx + 2] = magnitude;
                            processed[idx + 3] = 255;
                        }
                    }

                    const newImageData = new ImageData(processed, width, height);
                    ctx.putImageData(newImageData, 0, 0);
                    resolve(canvas);
                });
            }

            async createHistogram() {
                return new Promise((resolve) => {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');

                    canvas.width = this.currentImage.width;
                    canvas.height = this.currentImage.height;

                    ctx.drawImage(this.currentImage, 0, 0);
                    const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const data = imageData.data;

                    // Calculate histogram
                    const histogram = {
                        red: new Array(256).fill(0),
                        green: new Array(256).fill(0),
                        blue: new Array(256).fill(0)
                    };

                    for (let i = 0; i < data.length; i += 4) {
                        histogram.red[data[i]]++;
                        histogram.green[data[i + 1]]++;
                        histogram.blue[data[i + 2]]++;
                    }

                    // Create histogram visualization
                    const histCanvas = document.createElement('canvas');
                    const histCtx = histCanvas.getContext('2d');
                    histCanvas.width = 512;
                    histCanvas.height = 300;

                    // Find max value for scaling
                    const maxVal = Math.max(...histogram.red, ...histogram.green, ...histogram.blue);

                    // Draw histogram background
                    histCtx.fillStyle = '#ffffff';
                    histCtx.fillRect(0, 0, histCanvas.width, histCanvas.height);

                    // Draw grid lines
                    histCtx.strokeStyle = '#e0e0e0';
                    histCtx.lineWidth = 1;
                    for (let i = 0; i <= 255; i += 64) {
                        histCtx.beginPath();
                        histCtx.moveTo(i * 2, 0);
                        histCtx.lineTo(i * 2, 300);
                        histCtx.stroke();
                    }

                    // Draw red channel
                    histCtx.fillStyle = 'rgba(255, 0, 0, 0.6)';
                    for (let i = 0; i < 256; i++) {
                        const height = (histogram.red[i] / maxVal) * 280;
                        histCtx.fillRect(i * 2, 300 - height, 2, height);
                    }

                    // Draw green channel
                    histCtx.fillStyle = 'rgba(0, 255, 0, 0.6)';
                    for (let i = 0; i < 256; i++) {
                        const height = (histogram.green[i] / maxVal) * 280;
                        histCtx.fillRect(i * 2, 300 - height, 2, height);
                    }

                    // Draw blue channel
                    histCtx.fillStyle = 'rgba(0, 0, 255, 0.6)';
                    for (let i = 0; i < 256; i++) {
                        const height = (histogram.blue[i] / maxVal) * 280;
                        histCtx.fillRect(i * 2, 300 - height, 2, height);
                    }

                    resolve({canvas: canvas, histogram: histCanvas, stats: histogram});
                });
            }

            async normalizeImage() {
                return new Promise((resolve) => {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');

                    canvas.width = this.currentImage.width;
                    canvas.height = this.currentImage.height;

                    ctx.drawImage(this.currentImage, 0, 0);
                    const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const data = imageData.data;

                    // Find min and max values for each channel
                    let minR = 255, maxR = 0;
                    let minG = 255, maxG = 0;
                    let minB = 255, maxB = 0;

                    for (let i = 0; i < data.length; i += 4) {
                        minR = Math.min(minR, data[i]);
                        maxR = Math.max(maxR, data[i]);
                        minG = Math.min(minG, data[i + 1]);
                        maxG = Math.max(maxG, data[i + 1]);
                        minB = Math.min(minB, data[i + 2]);
                        maxB = Math.max(maxB, data[i + 2]);
                    }

                    // Normalize each channel
                    for (let i = 0; i < data.length; i += 4) {
                        data[i] = ((data[i] - minR) / (maxR - minR)) * 255;
                        data[i + 1] = ((data[i + 1] - minG) / (maxG - minG)) * 255;
                        data[i + 2] = ((data[i + 2] - minB) / (maxB - minB)) * 255;
                    }

                    ctx.putImageData(imageData, 0, 0);
                    resolve({canvas: canvas, normalizeStats: {minR, maxR, minG, maxG, minB, maxB}});
                });
            }

            displayProcessedImage(result, method) {
                const processedCanvas = document.getElementById('processedCanvas');
                const processedPlaceholder = document.getElementById('processedPlaceholder');
                const processedTitle = document.getElementById('processedTitle');
                const histogramContainer = document.getElementById('histogramContainer');
                const histogramCanvas = document.getElementById('histogramCanvas');
                const processedStats = document.getElementById('processedStats');

                const methodTitles = {
                    'IMAGE': 'üîç Processed Image: Edge Detection',
                    'HISTOGRAM': 'üìä Processed Image: Histogram Analysis',
                    'NORMALIZATION': '‚öñÔ∏è Processed Image: Normalization'
                };

                processedTitle.textContent = methodTitles[method];

                if (method === 'HISTOGRAM' && result.histogram) {
                    // Show original image and histogram
                    processedCanvas.width = result.canvas.width;
                    processedCanvas.height = result.canvas.height;
                    const ctx = processedCanvas.getContext('2d');
                    ctx.drawImage(result.canvas, 0, 0);

                    // Show histogram
                    histogramCanvas.width = result.histogram.width;
                    histogramCanvas.height = result.histogram.height;
                    const histCtx = histogramCanvas.getContext('2d');
                    histCtx.drawImage(result.histogram, 0, 0);

                    histogramContainer.style.display = 'block';

                    // Show histogram stats
                    if (result.stats) {
                        const totalPixels = result.canvas.width * result.canvas.height;
                        processedStats.innerHTML = `
                            <div class="stat-item">
                                <div class="stat-label">Red Channel Peak</div>
                                <div class="stat-value">${Math.max(...result.stats.red)}</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Green Channel Peak</div>
                                <div class="stat-value">${Math.max(...result.stats.green)}</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Blue Channel Peak</div>
                                <div class="stat-value">${Math.max(...result.stats.blue)}</div>
                            </div>
                        `;
                        processedStats.style.display = 'grid';
                    }
                } else {
                    // Show processed canvas
                    const canvas = result.canvas || result;
                    processedCanvas.width = canvas.width;
                    processedCanvas.height = canvas.height;
                    const ctx = processedCanvas.getContext('2d');
                    ctx.drawImage(canvas, 0, 0);

                    histogramContainer.style.display = 'none';

                    if (method === 'NORMALIZATION' && result.normalizeStats) {
                        const stats = result.normalizeStats;
                        processedStats.innerHTML = `
                            <div class="stat-item">
                                <div class="stat-label">Red Range</div>
                                <div class="stat-value">${stats.minR}-${stats.maxR}</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Green Range</div>
                                <div class="stat-value">${stats.minG}-${stats.maxG}</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Blue Range</div>
                                <div class="stat-value">${stats.minB}-${stats.maxB}</div>
                            </div>
                        `;
                        processedStats.style.display = 'grid';
                    } else {
                        processedStats.style.display = 'none';
                    }
                }

                processedCanvas.style.display = 'block';
                processedPlaceholder.style.display = 'none';
            }
        }

        // Initialize the application
        window.addEventListener('DOMContentLoaded', () => {
            new ImageProcessor();

            // Add some fun interactions
            console.log('üöÄ Big HoG Image Processor loaded successfully!');
        });
    </script>
</body>
</html>
